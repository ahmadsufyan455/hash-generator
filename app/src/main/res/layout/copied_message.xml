<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="32dp">

    <View
        android:id="@+id/bgMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="65dp"
        android:background="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvMessage"
        android:textColor="@color/white"
        android:text="@string/copied"
        app:layout_constraintStart_toStartOf="@id/bgMessage"
        app:layout_constraintEnd_toEndOf="@id/bgMessage"
        app:layout_constraintTop_toTopOf="@id/bgMessage"
        app:layout_constraintBottom_toBottomOf="@id/bgMessage"/>

</androidx.constraintlayout.widget.ConstraintLayout>